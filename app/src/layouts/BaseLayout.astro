---
interface Props {
  title: string;
  showNav?: boolean;
}

const { title, showNav = true } = Astro.props;
---

<!DOCTYPE html>
<html lang="id" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="UMKM Quick-Launch - Buat landing page UMKM dalam 10 menit" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | QuickLaunch</title>
  </head>
  <body class="pb-24">
    <slot />
    
    {showNav && (
      <nav class="fixed bottom-0 left-0 right-0 bg-[#112117]/95 backdrop-blur-lg border-t border-white/5 pb-safe z-50">
        <div class="flex items-center justify-around max-w-md mx-auto h-16 px-2">
          <a href="/" class="flex flex-col items-center gap-1 p-2 text-primary">
            <span class="material-symbols-outlined">dashboard</span>
            <span class="text-[10px] font-medium">Beranda</span>
          </a>
          <a href="/projects" class="flex flex-col items-center gap-1 p-2 text-gray-500 hover:text-white transition-colors">
            <span class="material-symbols-outlined">folder_open</span>
            <span class="text-[10px] font-medium">Proyek</span>
          </a>
          <a href="/settings" class="flex flex-col items-center gap-1 p-2 text-gray-500 hover:text-white transition-colors">
            <span class="material-symbols-outlined">settings</span>
            <span class="text-[10px] font-medium">Akun</span>
          </a>
        </div>
      </nav>
    )}
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
