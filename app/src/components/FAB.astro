---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<div class="fixed bottom-24 right-4 z-40 md:right-[calc(50%-220px)]">
  <a 
    href={href}
    class="group flex items-center justify-center w-14 h-14 bg-primary rounded-full shadow-[0_0_20px_rgba(54,226,123,0.4)] text-background-dark hover:scale-110 active:scale-95 transition-all duration-300"
  >
    <span class="material-symbols-outlined text-3xl group-hover:rotate-90 transition-transform duration-300">add</span>
  </a>
</div>
