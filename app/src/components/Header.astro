---
interface Props {
  showBack?: boolean;
  title?: string;
  step?: string;
}

const { showBack = false, title, step } = Astro.props;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[#112117]/90 backdrop-blur-md border-b border-white/5 transition-all duration-300">
  <div class="flex items-center justify-between px-4 py-3 max-w-md mx-auto w-full">
    {showBack ? (
      <a href="javascript:history.back()" class="text-white flex size-12 shrink-0 items-center justify-center rounded-full hover:bg-white/10 transition-colors">
        <span class="material-symbols-outlined">arrow_back</span>
      </a>
    ) : (
      <div class="flex items-center gap-2">
        <div class="bg-primary/20 p-1.5 rounded-lg">
          <span class="material-symbols-outlined text-primary text-[20px]">rocket_launch</span>
        </div>
        <h1 class="text-white text-lg font-bold tracking-tight">QuickLaunch</h1>
      </div>
    )}
    
    {title && (
      <h2 class="text-white text-lg font-bold leading-tight tracking-tight flex-1 text-center pr-12">{title}</h2>
    )}
    
    {step && (
      <div class="flex items-center justify-center bg-black/30 px-3 py-1 rounded-full border border-white/10">
        <p class="text-primary text-sm font-bold tracking-wide">{step}</p>
      </div>
    )}
    
    {!showBack && !title && (
      <div class="flex items-center gap-3">
        <!-- Connection Status -->
        <div class="hidden xs:flex items-center gap-1.5 bg-white/5 px-2 py-1 rounded-full border border-white/10">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
          </span>
          <span class="text-[10px] font-medium text-white/70 uppercase tracking-wide">Online</span>
        </div>
        <!-- Profile -->
        <div class="relative group cursor-pointer">
          <div class="h-9 w-9 rounded-full overflow-hidden border border-white/10 ring-2 ring-transparent group-hover:ring-primary/50 transition-all">
            <img 
              alt="Profile" 
              class="h-full w-full object-cover" 
              src="https://lh3.googleusercontent.com/aida-public/AB6AXuCaxCWxBTKODiQ-UFh85YPHnvQVap5EuQen-lmTHhyuVdTwO99UqwETt9_ChlJAtxOMlvuxo41NiFRrfCtBO7ZEaFxi8qUaxIpva4cbEE4D-m4SxREOUvnlMfA1cIFVnW2rTFwoTSJOfW6kYp4Uua8HOCdb3G4Q_6U27BJfO-HgKHTYQR72SqrGVxsJCjEiEnx1HSLRS4o_p5zQy9sWeQcB4Ikr-pIzEpH1ewPlt9Kt5hWMlqcKgkwxV3dxdJBi9VZdxl6r8NY0DUUk"
            />
          </div>
        </div>
      </div>
    )}
  </div>
</header>
