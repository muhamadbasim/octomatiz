  { id: 'warm', name: 'Warm Culinary', active: false, image: 'https://lh3.googleusercontent.com/aida-public/AB6AXuAH_lEKqhnqmJP5nk7SQrBUn94R18t7_djMWr4-kgrnlSkhdPt0NBD_H1PHL1ZhTZdirsct6Tn3DaiCFOqp1UH_Iq92VWGPzgeWjue9Cmr0uBAfOfI9JmqhRmyYZFfqFc4whSW5cFwSXqJj-1hSksiF8GsrUkLIrFMC9P2XkFSBExqvt0NwdIBgp07qivFJYmLwW1GZXh4vJ3Z_cQQWeNe-gi98T1hMYIyYKMt_og-Z99dQbQ7unIi77qqRUAn8VdbZBayzytENKBMm' },
  { id: 'modern', name: 'Modern Blue', active: false, image: 'https://lh3.googleusercontent.com/aida-public/AB6AXuDIeE3JzuUnuePEJwRgWQ70C_1A1r8JKdvtrlt6399amb2WxCs7YXbTK4U3p9yh-2IEzm506Wb0KHBKFy1xJfbowqUPs3bbvxHjTGjnO0VianCucR0bqNhyfQSlzH2V98LvKlWjvXuIoCDMvEBJvtuA4RWABuyBeMRSR2_i8SmTFkgDI4iiYuPnUCwD-6G6aF0tqdq4qbfZtTGqt877wE46vDrXDCKWBcmEW7oTTcOlBU5yC2vvmL967gftAzGMWaEQwiVVBr3pdeCT' },
